            </intent-filter>
        </activity>

        <activity android:name=".SignUpActivity" />
        <activity android:name=".AdminDashboardActivity" />
        <activity android:name=".UserDashboardActivity" />
        <activity android:name=".ManageEventsActivity" />
        <activity android:name=".AddEventActivity" />
        <activity android:name=".ViewEventsActivity" />
        <activity android:name=".EventDetailActivity" />
        <activity android:name=".MyBookingsActivity" />
        <activity android:name=".ViewBookingsActivity" />
        <activity android:name=".ManageVendorsActivity" />

    </application>

</manifest>